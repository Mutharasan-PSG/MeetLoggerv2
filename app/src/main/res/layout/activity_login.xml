<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white"
    >


    <TextView
        android:id="@+id/AppContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="249dp"
        android:fontFamily="@font/poppins_medium"
        android:text="See what\nhappened...\nAudio Unfold,\nDocuments Untold."
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/AppIcon"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/AppContext"
        android:layout_marginTop="150dp"
        android:src="@drawable/splashlogo" />

    <RelativeLayout
        android:id="@+id/Signin"
        android:layout_below="@id/AppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true">

        <!-- Text for Existing Users -->
        <LinearLayout
            android:id="@+id/btn_google_sign_in"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/google_logo"
                android:layout_width="26dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/google_logo" />

            <TextView
                android:id="@+id/google_sign_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Sign in with Google"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_google_sign_in"
            android:layout_marginTop="20dp"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:fontFamily="@font/poppins"
            android:text="By signing in, you agree to our Terms, Privacy Policy, and Cookies Use."
            android:textColor="@color/Grey"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>