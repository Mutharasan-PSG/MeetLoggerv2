<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="19dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/warning_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WARNING"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins_medium"
        android:paddingBottom="8dp" />

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_close"
            android:contentDescription="Cancel"
            android:layout_marginStart="180dp"
            android:layout_gravity="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="You are updating content in a translated language. Overwriting will replace the original language content, and it cannot be retrieved without re-translating. \n\nDo you want to overwrite the existing file or save as a new copy?"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/overwrite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:text="Overwrite"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_medium"/>

        <Button
            android:id="@+id/new_copy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:text="New Copy"
            android:textColor="@color/BLUE"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</LinearLayout>