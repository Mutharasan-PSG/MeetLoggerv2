<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Instruction TextView -->
    <TextView
        android:id="@+id/audioInstructionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
               android:layout_margin="10dp"
        android:hint="Upload an Audio file in MP3 format Only"
        android:textSize="16sp"
        android:textColor="@android:color/black"
         />

    <!-- Upload Audio Button with Icon -->
    <LinearLayout
        android:id="@+id/uploadAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="9dp"
        android:gravity="center"
        android:background="@drawable/rounded_image"
        android:layout_gravity="center"
        android:padding="9dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/uploadd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Audio"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingTop="2dp" />
    </LinearLayout>

    <!-- Selected Audio File Name -->
    <TextView
        android:id="@+id/selectedAudioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_margin="7dp"
        android:text="No audio file selected"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Process Audio Button -->
    <Button
        android:id="@+id/processAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/process"
        android:text="Process Audio"
        android:backgroundTint="@color/BLUE"
        android:fontFamily="@font/poppins_medium"
        android:layout_gravity="center"
        android:padding="9dp" />

</LinearLayout>